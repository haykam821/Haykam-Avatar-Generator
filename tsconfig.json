{
	"compilerOptions": {
		"allowJs": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": [
			"es2022",
			"dom"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmit": true,
		"noImplicitAny": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"strict": false,
		"target": "es2015",
		"types": [
			"chroma-js",
			"debug",
			"react",
			"react-dom",
			"styled-components"
		]
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx"
	]
}