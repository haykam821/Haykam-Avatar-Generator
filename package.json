{
	"name": "haykam-avatar-generator",
	"description": "A generator for haykam-styled avatars.",
	"version": "1.0.0",
	"main": "./src/index.jsx",
	"scripts": {
		"build": "next build && next export",
		"dev": "next dev",
		"lint": "eslint \"./**/*.js\" \"./**/*.ts\" \"./**/*.tsx\" --ignore-path .gitignore",
		"start": "next start"
	},
	"devDependencies": {
		"@types/chroma-js": "^2.1.2",
		"@types/debug": "^4.1.5",
		"@types/react": "^18.0.5",
		"@types/react-dom": "^18.0.1",
		"@types/styled-components": "^5.1.7",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"eslint-config-haykam": "^1.19.0",
		"eslint-config-next": "^13.0.5",
		"eslint-plugin-react": "^7.31.11",
		"typescript": "^4.0.3",
		"workbox-webpack-plugin": "^6.4.2"
	},
	"dependencies": {
		"chroma-js": "^2.0.2",
		"debug": "^4.1.1",
		"event-target-shim": "^6.0.2",
		"next": "^13.0.5",
		"next-pwa": "^5.6.0",
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"react-is": "^18.0.0",
		"styled-components": "^5.3.3",
		"webpack-pwa-manifest": "4.0.0"
	},
	"eslintConfig": {
		"extends": [
			"eslint-config-haykam",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"next/core-web-vitals"
		],
		"env": {
			"browser": true
		},
		"ignorePatterns": [
			"next-env.d.ts"
		],
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"jsdoc/require-param-type": "off",
			"semi": "off",
			"@typescript-eslint/semi": "error",
			"no-shadow": "off",
			"@typescript-eslint/no-shadow": "error",
			"sort-imports": "error",
			"@typescript-eslint/no-empty-interface": "off"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/haykam821/Haykam-Avatar-Generator.git"
	},
	"keywords": [
		"haykam",
		"avatar",
		"generator",
		"editor",
		"customization"
	],
	"author": "haykam821",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/haykam821/Haykam-Avatar-Generator/issues"
	},
	"homepage": "https://github.com/haykam821/Haykam-Avatar-Generator#readme"
}
